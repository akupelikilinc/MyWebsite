@model List<About>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Dashboard/_DashboardLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                ImageUrl
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.AboutID
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.ImageUrl
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AboutID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AboutID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AboutID">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
